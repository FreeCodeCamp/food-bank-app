{
  "name": "FreeCodeCamp Food-for-Good App",
  "description": "A customizable food bank webapp",
  "repository": "https://github.com/freeCodeCamp/Food-for-Good",
  "addons": ["mongolab"],
  "env": {
    "SECRET": {
      "description": "Session secret",
      "generator": "secret"
    },
    "GOOGLE_CLIENT_ID": {
      "description": "Google+ Client ID",
      "required": false
    },
    "GOOGLE_CLIENT_SECRET": {
      "description": "Google+ Client Secret",
      "required": false
    },
    "SENDPULSE_USER_ID": {
      "description": "Sendpulse User ID",
      "required": false
    },
    "SENDPULSE_SECRET": {
      "description": "Sendpulse Secret",
      "required": false
    },
    "SENDPULSE_EMAIL": {
      "description": "Sendpulse Email Address",
      "required": false
    }
  }
}
